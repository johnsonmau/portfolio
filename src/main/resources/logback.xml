<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Console Appender: Logs to the console -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Rolling File Appender configuration for INFO level logs -->
    <appender name="INFO_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/portfolio-app.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>logs/portfolio-app-%d{yyyy-MM-dd}-%i.log</fileNamePattern> <!-- Include DateToken and index -->
            <maxFileSize>1GB</maxFileSize> <!-- Max size per log file -->
            <maxHistory>30</maxHistory> <!-- Keep logs for 30 days -->
            <totalSizeCap>30GB</totalSizeCap> <!-- Total size cap for logs -->
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} - INFO - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Root logger configuration -->
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="INFO_FILE" />
    </root>

    <!-- Logger configuration for specific packages -->
    <logger name="com.johnson.portfolio" level="INFO">
        <appender-ref ref="INFO_FILE"/>
    </logger>

</configuration>
